        <TextBox TextChanged="TextBox_TextChanged"   />
        <ScrollViewer Grid.Row="2" >
            <c1:C1TreeView  SelectionChanged="TreeView_SelectionChanged"  
                            MouseDoubleClick="TreeView_MouseDoubleClick"   
                            AutoSearch="True" x:Name="TreeView" 
                            BorderThickness="0"  ItemTemplateSelector="{StaticResource CustomTemplateSelector}">
                <c1:C1TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="添加">
                            <MenuItem.Icon>
                                <Image Source="/Resources/Menu/newfile.png"></Image>
